    "version": "0.2.0",
    "configurations": [
        {
            "name": "Angular only",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/frontend/node_modules/@angular/cli/bin/ng",
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "protocol": "inspector",
            "port": 4200,
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/frontend/**/*.js"
            ]
        },
        {
            "name": "Django only",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "flushdatabase"
            ],
            "django": true,
            "justMyCode": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\backend\\manage.py",
        }
    ],
    "compounds": [
        {
            "name": "Django and Angular",
            "configurations": [
                "Django only",
                "Angular only"
            ]
        }
    ]
}